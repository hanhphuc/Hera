<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginLeft="20px"
        android:layout_marginTop="30px"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lgt">
        <TextView
            android:textColor="#d89c1a"
            android:text="Gender :  "
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radionam"
            android:layout_weight="1"
            android:textColor="#d89c1a"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Male"
            android:checked="true"
           />

        <RadioButton
            android:id="@+id/radionu"
            android:layout_weight="1"
            android:textColor="#d89c1a"
            android:text="Female"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:     " />
        <EditText
            android:id="@+id/tuoi"
            android:layout_weight="1"
            android:layout_width="300px"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     "/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height : "/>
        <EditText
            android:layout_weight="1"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:id="@+id/chieucao"/>
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  cm "/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight : "/>
        <EditText
            android:layout_weight="1"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:id="@+id/cannang"/>
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  kg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The weight you want : "/>
        <EditText
            android:layout_weight="1"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/cannangmongmuon"/>
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  kg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity :"/>

        <Spinner
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/spinner"/>
        <TextView
            android:textColor="#d89c1a"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "/>

    </LinearLayout>


    <Button
        android:background="#ff6347"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnkq"
        android:text="Done"
        android:textColor="#fff"
        android:layout_marginBottom="30px"/>
</LinearLayout>